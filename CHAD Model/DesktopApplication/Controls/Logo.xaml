<UserControl
    x:Class="DesktopApplication.Controls.Logo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:DesktopApplication.Properties"
    d:DesignHeight="60"
    d:DesignWidth="128"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image
            Width="60"
            Height="60"
            Source="../Resources/SOSIEL.png"
            Stretch="Fill" />

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                VerticalAlignment="Center"
                FontFamily="Calibri"
                FontSize="10"
                Text="{x:Static properties:Resources.PoweredBy}" />
            <TextBlock
                Grid.Row="1"
                VerticalAlignment="Top"
                FontFamily="Calibri"
                FontSize="18"
                FontWeight="Bold"
                Text="{x:Static properties:Resources.Sosiel}" />
        </Grid>

    </Grid>
</UserControl>